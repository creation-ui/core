{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "incremental": false,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "declarationMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@src": ["./src"],
      "@src/": ["./src/*"],
      "@theme": ["./src/theme"],
      "@theme/": ["./src/theme/*"],
      "@types": ["./src/types"],
      "@types/": ["./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/": ["./src/utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "**/tests",
    "**/*.cy.tsx",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}