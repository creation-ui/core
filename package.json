{
  "name": "@creation-ui/core",
  "homepage": "https://creation-ui.com",
  "version": "0.4.6",
  "description": "@creation-ui/core is a core package for components library in Creation UI family.",
  "repository": "https://github.com/creation-ui/core",
  "license": "MIT",
  "main": "index.js",
  "typings": "index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "copy": "cp ./package.json ./build && cp ./README.md ./build && cp ./LICENSE ./build  && cp ./src/index.css ./build",
    "lint:check": "eslint . --ext js,jsx,ts,tsx --max-warnings=0 --config .eslintrc.json --no-eslintrc",
    "prettier:check": "prettier -c .",
    "prettify": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx}\"",
    "_publish": "cd build && npm publish --registry https://registry.npmjs.org --access public",
    "release": "pnpm build && pnpm _publish",
    "amend": "git commit --amend --no-edit",
    "build": "pnpm build:rm && pnpm build:cjs && pnpm build:dts && pnpm copy && pnpm build:version",
    "build:cjs": "swc ./src -d ./build --only ./src/**/*.ts --config-file .swcrc",
    "build:dts": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build:version": "echo $(cat ./build/package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]')",
    "build:rollup": "pnpm build:version && pnpm tsc && pnpm build:rm && rollup -c",
    "build:rm": "rm -rf build",
    "ci:publish": "pnpm publish -r",
    "ci:version": "git fetch --tags && npm version $(git describe --abbrev=0 --tags) || true",
    "package:version": "pnpm  ci:version",
    "package:build": "pnpm build:rm && pnpm build",
    "package:publish": "pnpm _publish",
    "package": "pnpm package:version && pnpm package:build && pnpm package:publish",
    "override-version": "sh ./override-version.sh"
  },
  "dependencies": {
    "@headlessui/tailwindcss": "^0.1.3",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "keyboard-key": "^1.1.0",
    "lodash.merge": "^4.6.2",
    "lodash.values": "^4.3.0",
    "mini-svg-data-uri": "^1.4.4",
    "tailwind-merge": "^1.12.0",
    "tailwindcss": "^3.3.2",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "tailwindcss": "^3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^10.0.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.42",
    "@swc/css": "^0.0.20",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.values": "^4.3.7",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.6",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "rollup": "^3.20.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "javascript",
    "typescript",
    "core",
    "vite",
    "gatsby",
    "tailwind",
    "tailwind components",
    "tailwind elements",
    "tailwind library",
    "core library",
    "core components library",
    "tailwind sections",
    "tailwind css",
    "tailwind ui",
    "tailwind css next",
    "tailwind css vite"
  ]
}
